{
    "manifest_version": 3,
    "name": "Web-Jotter",
    "description": "Save tab sessions and jot highlights; your personal web of notes and tabs.",
    "version": "1.0",

    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "action": {
        "default_popup": "popup.html",
        
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
        }
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "host_permissions": [
        "<all_urls>"
    ]
}